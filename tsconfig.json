{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules", "./lib/*", "./src/*"],
      "view/*": ["view/*"]
    }
  },
  "checkJs": true,
  "include": ["src", "lib"],
  "exclude": [
    "node_modules"
  ],

}